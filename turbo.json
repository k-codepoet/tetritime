{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "outputs": ["build/**", "dist/**"]
    },
    "deploy": {
      "dependsOn": ["build"],
      "cache": false
    },
    "typecheck": {},
    "lint": {}
  }
}
